<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">

  <display-name>spring-mvc-app1</display-name>

  <absolute-ordering/>

  <servlet> <!-- Создаем DispatcherServlet-->
    <servlet-name>dispatcher</servlet-name> <!-- у него название dispatcher -->
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> <!-- для создания сервлета используем спринг -->
    <init-param>
      <param-name>contextConfigLocation</param-name> <!-- указываем путь где находится конфигурация-->
      <param-value>/WEB-INF/applicationContextMVC.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup><!-- указываем что при загрузке нужно в первую очередь обращаться к данному сервлету-->
  </servlet>

  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name> <!-- -->
    <url-pattern>/</url-pattern> <!--любой урл должен направляться на наш  DispatcherServlet-->
  </servlet-mapping>

</web-app>
